generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
}

enum Role {
  admin
  manager
  employee
}
model users {
  username String @unique
  id       String @id @default(cuid())
  role     Role
  password String
}
